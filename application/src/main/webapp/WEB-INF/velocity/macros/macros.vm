#macro(navigation $items)
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Music for all</a>
        </div>
        <div id="navbar" class="navbar-right navbar-collapse collapse ">
            <ul class="nav navbar-nav">
                #foreach($item in $items)
                         #navigationItem($item)
                #end
            </ul>
        </div>
    </div>
</nav>
#end

#macro(navigationItem $item)
    #set($isActive = false)
    #set($isActive = $item.isActive)
<li #if($isActive) class="active" #end>
    <a href="$item.url">
        <i class="fa"></i> $item.title
    </a>
</li>
#end

#macro(body )
<body>
    $!bodyContent##
<script type="text/javascript">
    var header = $("meta[name='_csrf_header']").attr("content");
    var token = $("meta[name='_csrf']").attr("content");

    $.ajaxSetup({
        beforeSend: function (xhr) {
            xhr.setRequestHeader(header, token);
        }
    });
</script>
</body>
#end

#macro(footer)
<footer class="container-fluid">
    <p>Music for all Â©</p>
</footer>
#end

#macro(form $id $action $method $enctype)
<form id=$idaction= #springUrl($action) method=$method #if($method=="post"||$method=="POST") enctype=$enctype #end>
    <input type="hidden" name="$!{_csrf.parameterName}" value="$!{_csrf.token}"/>
    $!bodyContent##
</form>
#end

#macro(logoutForm)
    #@form("logoutform",'/logout', "post", "application/x-www-form-urlencoded")
    <input type="submit" value="Log out" class="btn btn-default"/>
    #end
#end